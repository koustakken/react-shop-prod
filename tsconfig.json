{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        // 
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        // for absolute imports
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        // "strictNullChecks": false
    },
    "ts-node": {
        "compilerOptions": {
          "module": "CommonJS"
        }
      }
}